<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th colspan="3"></th>
		</tr>
	</thead>
		<tbody>
			<% @books.each do |book| %>
			<tr>
				<td><%= book.title %></td>
				<td><%= book.body %></td>
				<td><%= link_to "Show", book_path(book) %></td>
				<td><%= link_to "Edit", edit_book_path(book) %></td>
				<td><%= link_to "Destroy", book_path(book), method: :'delete',data: { confirm: 'Are you sure?' } %></td>

			</tr>
		   <% end %>
		</tbody>
</table>



<h2>New book</h2>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
 
    <h4>title</h4>
    <%= f.text_field :title %>

    <h4>body</h4>
    <%= f.text_area :body %>
 
    <%= f.submit 'Create Book' %>

<% end %>
